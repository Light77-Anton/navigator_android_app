<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:tag="Chat list activity"
    android:id="@+id/chat_list_layout"
    tools:context=".ChatListActivity"
    android:orientation="vertical"
    android:background="@drawable/chat_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.widget.Button
        android:id="@+id/back_button"
        android:contentDescription="."
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:onClick="onBack"
        android:background="@color/custom_gray_blue"
        android:drawableStart="@drawable/ic_arrow_back"/>
    <TextView
        android:id="@+id/recipient_name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/back_button"
        android:background="@color/custom_gray_blue"
        android:textAlignment="center"
        android:text="Переписки"
        android:textColor="@color/white"
        android:textSize="40sp"/>
    <ScrollView
        android:id="@+id/chat_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="50dp">
        <LinearLayout
            android:id="@+id/chat_inside_layout"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.widget.Button
                android:id="@+id/all_chats"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="@drawable/rectangle_button"
                android:text="@string/all"
                android:padding="10dp"
                android:onClick="onAllClick"
                android:textAlignment="center"
                android:textColor="@color/red"
                android:textSize="30sp"/>
            <android.widget.Button
                android:id="@+id/favorites"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="@drawable/rectangle_button"
                android:text="@string/saved_persons"
                android:drawableRight="@drawable/rate_star"
                android:padding="10dp"
                android:onClick="onSavedPersonsClick"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="30sp"/>
            <android.widget.Button
                android:id="@+id/contacted_persons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="@drawable/rectangle_button"
                android:text="@string/contacted_persons"
                android:drawableRight="@drawable/default_user_avatar"
                android:onClick="onContactedPersonsClick"
                android:padding="10dp"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="30sp"/>
            <android.widget.Button
                android:id="@+id/black_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="@drawable/rectangle_button"
                android:text="@string/black_list"
                android:padding="10dp"
                android:onClick="onBlackListClick"
                android:drawableRight="@drawable/inactive"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="30sp"/>
            <android.widget.Button
                android:id="@+id/public_comments"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="@drawable/rectangle_button"
                android:text="@string/public_comments"
                android:padding="10dp"
                android:onClick="onPublicCommentsClick"
                android:drawableRight="@drawable/message_sign"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="30sp"/>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>