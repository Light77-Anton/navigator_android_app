<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/chat_layout"
    android:orientation="vertical"
    android:background="@drawable/chat_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.widget.Button
        android:id="@+id/back_button"
        android:contentDescription="."
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:onClick="onBack"
        android:background="@color/custom_gray_blue"
        android:drawableStart="@drawable/ic_arrow_back"/>
    <TextView
        android:id="@+id/recipient_name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/back_button"
        android:layout_toLeftOf="@id/chat_setting"
        android:background="@color/custom_gray_blue"
        android:textAlignment="center"
        android:paddingStart="20dp"
        android:text="Antons Baumans"
        android:textColor="@color/white"
        android:textSize="30sp"/>
    <android.widget.Button
        android:id="@+id/chat_setting"
        android:contentDescription="."
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:onClick="onSettingsClick"
        android:background="@color/custom_gray_blue"
        android:paddingLeft="15dp"
        android:drawableStart="@drawable/ic_settings"/>
    <ScrollView
        android:id="@+id/chat_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="50dp">
        <LinearLayout
            android:id="@+id/chat_inside_layout"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:padding="15dp"
                android:background="@drawable/other_person_chat_offer_background"
                android:text="Предложение о работе : Антон Бауман - Специалист - Riga, Ilukstes iela 38 - 40 евро в час - нажмите на сообшение для ответа"
                android:textColor="@color/white"
                android:textSize="30sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                android:padding="15dp"
                android:background="@drawable/my_chat_offer_acceptance_background"
                android:text="Принято предложение о работе : Антон Бауман - Специалист"
                android:textColor="@color/black"
                android:textSize="30sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:padding="15dp"
                android:background="@drawable/other_person_chat_message_background"
                android:text="Привет!"
                android:textColor="@color/white"
                android:textSize="30sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                android:padding="15dp"
                android:background="@drawable/my_chat_message_background"
                android:text="Привет!"
                android:textColor="@color/black"
                android:textSize="30sp"/>
            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="left"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/gray_blue_rectangle"
                android:src="@drawable/logo"/>
        </LinearLayout>
    </ScrollView>
    <android.widget.Button
        android:id="@+id/attach_file"
        android:contentDescription="."
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/enter_message"
        android:onClick="onSendImage"
        android:background="@drawable/baseline_attach_file_24"/>
    <EditText
        android:id="@+id/enter_message"
        android:layout_width="370dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:hint="@string/enter_message"
        android:background="@color/custom_gray_blue"
        android:textColor="@color/black"
        android:textSize="40sp"/>
</RelativeLayout>