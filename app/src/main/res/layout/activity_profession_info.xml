<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".EmployeeProfessionInfoActivity"
    android:background="@color/custom_gray_blue"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/profession_info_layout"
        android:orientation="vertical"
        android:background="@color/custom_gray_blue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="40dp"
            android:text="@string/choose_profession"
            android:textColor="@color/white"
            android:textSize="40sp" />
        <Spinner
            android:id="@+id/profession"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/spinner"
            android:textAlignment="center"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="@string/write_additional_info"
            android:textColor="@color/white"
            android:textSize="40sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="English(optional)"
            android:textColor="@color/white"
            android:textSize="30sp" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginTop="30dp"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:background="@drawable/rectangle_button"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Русский(optional)"
            android:textColor="@color/white"
            android:textSize="30sp" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginTop="30dp"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:background="@drawable/rectangle_button"/>
        <android.widget.Button
            android:id="@+id/confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:background="@drawable/rectangle_button"
            android:text="@string/confirm"
            android:textColor="@color/red"
            android:textSize="40sp"/>
        <android.widget.Button
            android:id="@+id/back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:background="@drawable/rectangle_button"
            android:drawableStart="@drawable/ic_arrow_back"
            android:onClick="onBack"
            android:text="@string/back"
            android:textColor="@color/white"
            android:textSize="40sp" />
    </LinearLayout>
</ScrollView>