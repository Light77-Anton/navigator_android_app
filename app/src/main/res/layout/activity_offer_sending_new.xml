<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".OfferSendingNewActivity"
    android:tag="Offer sending new activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/custom_gray_blue">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/custom_gray_blue">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/required_profession"
            android:textColor="@color/white"
            android:textSize="40sp"/>
        <Spinner
            android:id="@+id/profession"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            android:textAlignment="center"
            android:background="@drawable/spinner"
            android:textColor="@color/white"
            android:textSize="30sp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:labelFor="@id/job_address"
            android:layout_marginTop="30dp"
            android:text="@string/job_address"
            android:textColor="@color/white"
            android:textSize="40sp"/>
        <android.widget.Button
            android:id="@+id/job_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@drawable/rectangle_button"
            android:textColor="@color/white"
            android:textSize="30sp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:labelFor="@id/payment_and_additional_info"
            android:layout_marginTop="30dp"
            android:text="@string/payment_and_additional_info"
            android:textColor="@color/white"
            android:textSize="40sp"/>
        <EditText
            android:id="@+id/payment_and_additional_info"
            android:inputType="textMultiLine"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/rectangle_button"
            android:textColor="@color/white"
            android:textSize="30sp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="@string/choose_start_date"
            android:textColor="@color/white"
            android:textSize="40sp"/>
        <DatePicker
            android:id="@+id/start_date_picker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="20dp"
            android:visibility="visible"
            android:clickable="false"
            android:layout_marginTop="20dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="@string/choose_start_time"
            android:textColor="@color/white"
            android:textSize="40sp"/>
        <TimePicker
            android:id="@+id/start_time_picker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/custom_green"
            android:timePickerMode="spinner"
            android:layout_marginTop="30dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="@string/set_acceptable_waiting_time"
            android:textColor="@color/white"
            android:textSize="40sp"/>
        <CheckBox
            android:id="@+id/waiting_until_start_date_time_checkbox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/waiting_until_start_date_time_checkbox"
            android:textColor="@color/white"
            android:layout_marginTop="10dp"
            android:textSize="40sp"
            android:background="@drawable/edit_text"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/or_set_separately"
            android:textColor="@color/white"
            android:layout_marginTop="10dp"
            android:textSize="40sp" />
        <DatePicker
            android:id="@+id/waiting_date_picker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/chat_background"
            android:paddingStart="20dp"
            android:visibility="visible"
            android:clickable="false"
            android:layout_marginTop="10dp"/>
        <TimePicker
            android:id="@+id/waiting_time_picker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/chat_background"
            android:timePickerMode="spinner" />
        <android.widget.Button
            android:onClick="onSend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:background="@drawable/rectangle_button"
            android:textAlignment="center"
            android:text="@string/send"
            android:textColor="@color/red"
            android:textSize="50sp"/>
        <android.widget.Button
            android:id="@+id/back"
            android:onClick="onBack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:background="@drawable/rectangle_button"
            android:text="@string/back"
            android:textColor="@color/white"
            android:textSize="50sp"
            android:drawableStart="@drawable/ic_arrow_back"/>
    </LinearLayout>
</ScrollView>
