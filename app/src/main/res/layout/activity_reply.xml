<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ReplyActivity"
    android:tag="Reply activity"
    android:background="@color/custom_gray_blue"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="*User* leaved public comment about you: *comment content*"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:textColor="@color/white"
        android:textSize="40sp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"/>
    <EditText
        android:id="@+id/reply"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:inputType="textMultiLine"
        android:background="@drawable/rectangle_button"
        android:hint="@string/you_can_write_reply"
        android:layout_marginTop="30dp"
        android:padding="10dp"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:layout_alignParentStart="true"
        android:layout_below="@id/title"/>
    <Button
        android:id="@+id/confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle_button"
        android:text="@string/confirm"
        android:layout_marginTop="100dp"
        android:padding="10dp"
        android:textColor="@color/red"
        android:textSize="40sp"
        android:onClick="onConfirmClick"
        android:layout_alignParentStart="true"
        android:layout_below="@id/reply"/>
</RelativeLayout>