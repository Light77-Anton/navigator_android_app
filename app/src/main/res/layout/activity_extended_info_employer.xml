<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/custom_gray_blue">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/custom_gray_blue">
        <TextView
            android:id="@+id/name"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:text="Vadims Baumans"
            android:textColor="@color/black"
            android:textSize="30dp"/>
        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_alignParentEnd="true"
            android:src="@mipmap/avatar_example_round" />
        <android.widget.Button
            android:id="@+id/rating"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/name"
            android:layout_marginTop="30dp"
            android:background="@color/custom_gray_blue"
            android:text="Rating 10/10"
            android:textColor="@color/custom_dark_green"
            android:textSize="25sp" />
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@id/name"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="40dp"
            android:layout_toRightOf="@id/rating"
            android:src="@drawable/rate_star" />
        <TextView
            android:id="@+id/firm_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rating"
            android:layout_marginTop="60dp"
            android:text="Firm name: not specified"
            android:textColor="@color/black"
            android:textSize="30dp" />
        <TextView
            android:id="@+id/languages"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/firm_name"
            android:layout_marginTop="60dp"
            android:text="Communication languages : Русский, English"
            android:textColor="@color/black"
            android:textSize="30dp" />
        <TextView
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/languages"
            android:layout_marginTop="30dp"
            android:text="Email: hidden"
            android:textColor="@color/black"
            android:textSize="30dp" />
        <TextView
            android:id="@+id/phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/email"
            android:layout_marginTop="30dp"
            android:text="Phone: hidden"
            android:textColor="@color/black"
            android:textSize="30dp" />
        <TextView
            android:id="@+id/social_networks_links"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/phone"
            android:layout_marginTop="30dp"
            android:text="Social networks links: not specified"
            android:textColor="@color/black"
            android:textSize="30dp" />
        <android.widget.Button
            android:id="@+id/open_chat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/social_networks_links"
            android:background="@drawable/rectangle_button"
            android:layout_marginTop="60dp"
            android:text="@string/open_chat"
            android:textColor="@color/white"
            android:textSize="50sp" />
        <android.widget.Button
            android:id="@+id/back"
            android:onClick="onBack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/open_chat"
            android:background="@drawable/rectangle_button"
            android:text="@string/back"
            android:textColor="@color/white"
            android:textSize="50sp"
            android:layout_marginTop="60dp"
            android:drawableStart="@drawable/ic_arrow_back"/>
    </RelativeLayout>
</ScrollView>
