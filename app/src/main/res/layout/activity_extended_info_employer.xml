<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:tag="Extended info employer activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/custom_gray_blue">
    <RelativeLayout
        android:id="@+id/employer_info_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/custom_gray_blue">
        <TextView
            android:id="@+id/vacancy_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_alignParentTop="true"
            android:text="Vacancy info:"
            android:textColor="@color/white"
            android:textSize="40dp"/>
        <TextView
            android:id="@+id/profession"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/vacancy_info"
            android:text="Profession name"
            android:textColor="@color/black"
            android:textSize="30dp"/>
        <TextView
            android:id="@+id/job_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/profession"
            android:text="Job address"
            android:textColor="@color/black"
            android:textSize="30dp"/>
        <TextView
            android:id="@+id/start_date_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/job_location"
            android:text="Start date and time"
            android:textColor="@color/black"
            android:textSize="30dp"/>
        <TextView
            android:id="@+id/vacancy_availability"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/start_date_time"
            android:text="Vacancy availability"
            android:textColor="@color/black"
            android:textSize="30dp"/>
        <TextView
            android:id="@+id/payment_and_additional_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/vacancy_availability"
            android:text="payment and additional info"
            android:textColor="@color/black"
            android:textSize="30dp"/>
        <TextView
            android:id="@+id/employer_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_below="@id/payment_and_additional_info"
            android:text="Employer info:"
            android:textColor="@color/white"
            android:textSize="40dp"/>
        <TextView
            android:id="@+id/name"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_below="@id/employer_info"
            android:text="Vadims Baumans"
            android:textColor="@color/black"
            android:textSize="30dp"/>
        <ImageView
            android:id="@+id/avatar"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="30dp"
            android:layout_toRightOf="@id/name"
            android:layout_below="@id/employer_info"
            android:src="@mipmap/avatar_example_round" />
        <android.widget.Button
            android:id="@+id/rating"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/name"
            android:layout_marginTop="30dp"
            android:background="@color/custom_gray_blue"
            android:onClick="onRatingClick"
            android:text="Rating 10/10"
            android:textColor="@color/custom_dark_green"
            android:textSize="25sp" />
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@id/name"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="40dp"
            android:layout_toRightOf="@id/rating"
            android:src="@drawable/rate_star" />
        <TextView
            android:id="@+id/firm_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rating"
            android:layout_marginTop="60dp"
            android:text="Firm name: not specified"
            android:textColor="@color/black"
            android:textSize="30dp" />
        <TextView
            android:id="@+id/languages"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/firm_name"
            android:layout_marginTop="60dp"
            android:text="Communication languages : Русский, English"
            android:textColor="@color/black"
            android:textSize="30dp" />
        <TextView
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/languages"
            android:layout_marginTop="30dp"
            android:text="Email: hidden"
            android:textColor="@color/black"
            android:textSize="30dp" />
        <TextView
            android:id="@+id/phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/email"
            android:layout_marginTop="30dp"
            android:text="Phone: hidden"
            android:textColor="@color/black"
            android:textSize="30dp" />
        <TextView
            android:id="@+id/social_networks_links"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/phone"
            android:layout_marginTop="30dp"
            android:text="Social networks links: not specified"
            android:textColor="@color/black"
            android:textSize="30dp" />
        <android.widget.Button
            android:id="@+id/give_offer"
            android:onClick="onSendOffer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/social_networks_links"
            android:background="@drawable/rectangle_button"
            android:layout_marginTop="60dp"
            android:text="@string/send_offer"
            android:textColor="@color/white"
            android:textSize="50sp" />
        <android.widget.Button
            android:id="@+id/back"
            android:onClick="onBack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/give_offer"
            android:background="@drawable/rectangle_button"
            android:text="@string/back"
            android:textColor="@color/white"
            android:textSize="50sp"
            android:layout_marginTop="60dp"
            android:drawableStart="@drawable/ic_arrow_back"/>
    </RelativeLayout>
</ScrollView>
