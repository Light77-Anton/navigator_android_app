<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/custom_gray_blue"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/custom_gray_blue">
        <TextView
            android:id="@+id/name"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:text="Antons Baumans"
            android:textColor="@color/black"
            android:textSize="30sp"/>
        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/default_user_avatar" />
        <TextView
            android:id="@+id/rating"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/name"
            android:layout_marginTop="30dp"
            android:text="Rating 0/10"
            android:textColor="@color/black"
            android:textSize="30sp" />
        <TextView
            android:id="@+id/status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rating"
            android:layout_marginTop="60dp"
            android:text="Status: active"
            android:textColor="@color/black"
            android:textSize="30sp" />
        <TextView
            android:id="@+id/professions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/status"
            android:layout_marginTop="60dp"
            android:text="Professions : "
            android:textColor="@color/black"
            android:textSize="30sp" />
        <TextView
            android:id="@+id/first_profession"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/professions"
            android:layout_marginTop="10dp"
            android:text="first profession : additional info"
            android:textColor="@color/black"
            android:textSize="30sp" />
        <TextView
            android:id="@+id/second_profession"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/first_profession"
            android:layout_marginTop="10dp"
            android:text="second profession: no additional info"
            android:textColor="@color/black"
            android:textSize="30sp" />
        <TextView
            android:id="@+id/works_requiremnets"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/second_profession"
            android:layout_marginTop="60dp"
            android:text="Employee's work requirements : "
            android:textColor="@color/black"
            android:textSize="30sp" />
        <TextView
            android:id="@+id/languages"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/works_requiremnets"
            android:layout_marginTop="60dp"
            android:text="Communication languages : Русский, English"
            android:textColor="@color/black"
            android:textSize="30sp" />
        <TextView
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/languages"
            android:layout_marginTop="30dp"
            android:text="Email: antonbauman@gmail.com"
            android:textColor="@color/black"
            android:textSize="30sp" />
        <TextView
            android:id="@+id/phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/email"
            android:layout_marginTop="30dp"
            android:text="Phone: +37120022061"
            android:textColor="@color/black"
            android:textSize="30sp" />
        <TextView
            android:id="@+id/social_networks_links"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/phone"
            android:layout_marginTop="30dp"
            android:text="Social networks links: not specified"
            android:textColor="@color/black"
            android:textSize="30sp" />
        <Button
            android:id="@+id/comments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/social_networks_links"
            android:background="@color/custom_gray_blue"
            android:layout_marginTop="30dp"
            android:text="Show comments..."
            android:textColor="@color/white"
            android:textSize="30sp" />
        <android.widget.Button
            android:id="@+id/give_offer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/comments"
            android:background="@drawable/rectangle_button"
            android:layout_marginTop="60dp"
            android:text="@string/give_offer"
            android:textColor="@color/white"
            android:textSize="50sp" />
        <Button
            android:id="@+id/open_chat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/give_offer"
            android:background="@drawable/rectangle_button"
            android:layout_marginTop="60dp"
            android:text="@string/open_chat"
            android:textColor="@color/white"
            android:textSize="50sp" />
        <android.widget.Button
            android:id="@+id/back"
            android:onClick="onBack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/open_chat"
            android:background="@drawable/rectangle_button"
            android:text="@string/back"
            android:textColor="@color/white"
            android:textSize="50sp"
            android:layout_marginTop="60dp"
            android:drawableStart="@drawable/ic_arrow_back"/>
    </RelativeLayout>
</ScrollView>
