<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:tag="Professions list activity"
    tools:context=".EmployeeProfessionListActivity"
    android:background="@color/custom_gray_blue"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/custom_gray_blue"
        android:orientation="vertical">
        <android.widget.Button
            android:id="@+id/back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@drawable/rectangle_button"
            android:onClick="onBack"
            android:text="@string/back"
            android:textColor="@color/white"
            android:textSize="40sp"
            android:drawableStart="@drawable/ic_arrow_back"/>
        <android.widget.Button
            android:id="@+id/confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:background="@drawable/rectangle_button"
            android:text="@string/confirm"
            android:onClick="onConfirmClick"
            android:textColor="@color/red"
            android:textSize="40sp"/>
        <EditText
            android:id="@+id/info_from_employee"
            android:inputType="textMultiLine"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="50dp"
            android:padding="10dp"
            android:background="@drawable/rectangle_button"
            android:hint="@string/info_from_employee_to_employers_field_hint"
            android:textColor="@color/white"
            android:textSize="30sp"/>
        <Spinner
            android:id="@+id/first_profession"
            android:contentDescription="1"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/spinner"
            android:textAlignment="center"/>
        <Spinner
            android:id="@+id/second_profession"
            android:contentDescription="2"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/spinner"
            android:textAlignment="center"/>
        <Spinner
            android:id="@+id/third_profession"
            android:contentDescription="3"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/spinner"
            android:textAlignment="center"/>
        <Spinner
            android:id="@+id/fought_profession"
            android:contentDescription="4"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/spinner"
            android:textAlignment="center"/>
        <Spinner
            android:id="@+id/fifth_profession"
            android:contentDescription="5"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/spinner"
            android:textAlignment="center"/>
    </LinearLayout>
</ScrollView>