<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/custom_gray_blue">
    <android.widget.Button
        android:id="@+id/search_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:text="@string/search"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:background="@drawable/gray_blue_rectangle"
        android:drawableEnd="@drawable/ic_search"/>
    <android.widget.Button
        android:id="@+id/status_button"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="100dp"
        android:layout_width="240dp"
        android:layout_height="50dp"
        android:onClick="onOffersAndEmployeesInfoClick"
        android:text="@string/inactive"
        android:background="@drawable/gray_blue_rectangle"
        android:drawableEnd="@drawable/inactive"/>
    <android.widget.Button
        android:id="@+id/settings_button"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:onClick="onSettingsClick"
        android:background="@drawable/gray_blue_rectangle"
        android:drawableLeft="@drawable/ic_settings"
        android:drawableRight="@drawable/ic_settings2"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="700dp"
        android:layout_below="@id/sort_request"
        android:layout_marginBottom="50dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/gray_blue_rectangle">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rectangle_button"
                android:text="Vadims Baumans      8/10     0.5km"
                android:textColor="@color/black"
                android:textSize="20sp"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rectangle_button"
                android:text="Вася Пупкин      5/10     3.9km"
                android:textColor="@color/black"
                android:textSize="20sp"/>
            <!--
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rectangle_button"
                android:text="Vadims Baumans      8/10     0.5km"
                android:textColor="@color/black"
                android:textSize="20sp"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rectangle_button"
                android:text="Вася Пупкин      5/10     3.9km"
                android:textColor="@color/black"
                android:textSize="20sp"/>
            -->
        </LinearLayout>
    </ScrollView>
    <android.widget.Button
        android:id="@+id/sort_request"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:onClick="onSortRequestClick"
        android:text="@string/sort_request"
        android:background="@drawable/gray_blue_rectangle"
        android:drawableEnd="@drawable/baseline_arrow_upward_24"/>
</RelativeLayout>