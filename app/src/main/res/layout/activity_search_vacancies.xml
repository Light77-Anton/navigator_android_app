<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:tag="Search vacancies activity"
    tools:context=".SearchVacanciesActivity"
    android:background="@color/custom_gray_blue"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:background="@color/custom_gray_blue"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="@string/choose_profession"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:labelFor="@id/search_employees_autocomplete"
            android:textSize="40sp"/>
        <AutoCompleteTextView
            android:id="@+id/search_employees_autocomplete"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:completionHint="@string/choose_profession"
            android:textColor="@color/white"
            android:textSize="40sp"
            android:paddingStart="45dp"
            android:background="@drawable/spinner"
            android:completionThreshold="1" />
        <android.widget.Button
            android:id="@+id/search"
            android:onClick="onSearchClick"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="500dp"
            android:background="@drawable/rectangle_button"
            android:text="@string/search"
            android:textColor="@color/white"
            android:textSize="50sp" />
        <android.widget.Button
            android:id="@+id/back"
            android:onClick="onBackClick"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@drawable/rectangle_button"
            android:text="@string/back"
            android:textColor="@color/white"
            android:textSize="50sp"
            android:drawableStart="@drawable/ic_arrow_back"/>
    </LinearLayout>
</ScrollView>
